<resources>

    <color name="colorPrimary">#666</color>
    <color name="colorPrimaryDark">#444</color>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="TranscludeToolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
    </style>

    <style name="FormToolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:background">@color/primaryColor</item>
    </style>

    <style name="CardButton">
        <item name="android:background">@drawable/flat_button</item>
        <item name="elevation">0dp</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:height">36dp</item>
        <item name="android:minWidth">0dp</item>
    </style>

    <style name="CardButton.Secondary" parent="CardButton">
        <item name="android:textColor">#FFA824</item>
    </style>

    <style name="CardButton.Primary" parent="CardButton">
        <item name="android:textColor">#0091F8</item>
    </style>

</resources>
