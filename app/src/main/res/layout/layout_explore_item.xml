<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="0dp"
    android:id="@+id/exploreCardView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="16dp">

            <ImageView
                android:id="@+id/author_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#000000"/>

            <LinearLayout
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:orientation="vertical"
                android:layout_toRightOf="@id/author_avatar"
                android:layout_toEndOf="@id/author_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:id="@+id/author_name"
                    android:text="Author Name"
                    style="@style/Base.TextAppearance.AppCompat.Body2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/author_bio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/Base.TextAppearance.AppCompat.Caption"
                    android:text="Author description goes here"/>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_centerInParent="true"
                android:id="@+id/activity_image"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:src="@drawable/activity_image"
                android:background="#000000"/>

            <TextView
                android:layout_alignLeft="@id/activity_image"
                android:layout_alignStart="@id/activity_image"
                android:layout_alignBottom="@id/activity_image"
                android:layout_marginLeft="16dp"
                android:layout_marginBottom="16dp"
                android:id="@+id/activity_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Activity Title Goes Here"
                style="@style/Base.TextAppearance.AppCompat.Title.Inverse"/>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:id="@+id/activity_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="16 Dec 2014"
                style="@style/Base.TextAppearance.AppCompat.Caption"/>

            <TextView
                android:id="@+id/activity_description"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:text="Lorem ipsum dolor sit amet\nHele hele vay vay"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/CardActionsDivider"
            />

        <RelativeLayout
            android:id="@+id/action_buttons_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp">

            <Button
                android:id="@+id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardButton.Secondary"
                android:text="SHARE"/>

            <Button
                android:id="@+id/info_button"
                android:layout_toRightOf="@id/share_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardButton"
                android:text="INFO"/>

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/join_button"
                android:layout_gravity="fill_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/CardButton.Primary"
                android:text="JOIN"/>

        </RelativeLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>
